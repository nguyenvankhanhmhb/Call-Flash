<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".feature.led.LedActivity">

    <RelativeLayout
        android:id="@+id/viewTop"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/back"
            android:layout_width="@dimen/_30sdp"
            android:layout_centerVertical="true"
            android:src="@drawable/baseline_arrow_back"
            android:tint="?colorOnPrimary"
            android:padding="@dimen/_5sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_height="@dimen/_30sdp"/>

        <com.basic.common.widget.LsTextView
            android:layout_width="wrap_content"
            android:layout_toEndOf="@id/back"
            android:layout_marginStart="@dimen/_10sdp"
            android:textColor="?colorOnPrimary"
            android:textSize="@dimen/_15ssp"
            android:text="Hiệu ứng đèn LED - Chữ chạy"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/viewTop"
        android:layout_width="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="0dp">

        <View
            android:background="#40FFFFFF"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_2sdp"/>

        <View
            android:background="#000000"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_100sdp"/>

        <View
            android:background="#40FFFFFF"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_2sdp"/>

        <com.basic.common.widget.LsTextView
            android:text="Nhập nội dung"
            android:textSize="@dimen/_10ssp"
            android:textColor="?colorOnPrimary"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            app:cardBackgroundColor="?android:windowBackground"
            app:cardElevation="0dp"
            app:cardCornerRadius="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_height="@dimen/_35sdp">

            <com.basic.common.widget.LsEditText
                android:text="❤ Hello!"
                android:padding="@dimen/_10sdp"
                android:textSize="@dimen/_10ssp"
                android:textColor="?android:textColorPrimary"
                android:background="@null"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </com.google.android.material.card.MaterialCardView>

        <LinearLayout
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    app:strokeWidth="@dimen/_2sdp"
                    app:strokeColor="?colorAccent"
                    app:cardElevation="0dp"
                    app:layout_constraintDimensionRatio="1:1"
                    app:cardCornerRadius="@dimen/_10sdp"
                    app:cardBackgroundColor="?android:windowBackground"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_height="match_parent">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="match_parent"
                        android:src="@drawable/left_arrow"
                        android:padding="@dimen/_10sdp"
                        android:layout_height="match_parent"/>

                </com.google.android.material.card.MaterialCardView>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    app:strokeWidth="@dimen/_2sdp"
                    app:strokeColor="?colorAccent"
                    app:cardElevation="0dp"
                    app:layout_constraintDimensionRatio="1:1"
                    app:cardCornerRadius="@dimen/_10sdp"
                    app:cardBackgroundColor="?android:windowBackground"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_height="match_parent">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="match_parent"
                        android:src="@drawable/right_arrow"
                        android:padding="@dimen/_10sdp"
                        android:layout_height="match_parent"/>

                </com.google.android.material.card.MaterialCardView>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    app:strokeWidth="@dimen/_2sdp"
                    app:strokeColor="?colorAccent"
                    app:cardElevation="0dp"
                    app:layout_constraintDimensionRatio="1:1"
                    app:cardCornerRadius="@dimen/_10sdp"
                    app:cardBackgroundColor="?android:windowBackground"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_height="match_parent">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="match_parent"
                        android:src="@drawable/minus_sign"
                        android:padding="@dimen/_10sdp"
                        android:layout_height="match_parent"/>

                </com.google.android.material.card.MaterialCardView>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    app:strokeWidth="@dimen/_2sdp"
                    app:strokeColor="?colorAccent"
                    app:cardElevation="0dp"
                    app:layout_constraintDimensionRatio="1:1"
                    app:cardCornerRadius="@dimen/_10sdp"
                    app:cardBackgroundColor="?android:windowBackground"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_height="match_parent">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="match_parent"
                        android:src="@drawable/plus"
                        android:padding="@dimen/_10sdp"
                        android:layout_height="match_parent"/>

                </com.google.android.material.card.MaterialCardView>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    app:strokeWidth="@dimen/_2sdp"
                    app:strokeColor="?colorAccent"
                    app:cardElevation="0dp"
                    app:layout_constraintDimensionRatio="1:1"
                    app:cardCornerRadius="@dimen/_10sdp"
                    app:cardBackgroundColor="?android:windowBackground"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_height="match_parent">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="match_parent"
                        android:src="@drawable/color_circle"
                        android:padding="@dimen/_10sdp"
                        android:layout_height="match_parent"/>

                </com.google.android.material.card.MaterialCardView>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3">

                <SeekBar
                    android:thumbTint="?colorOnPrimary"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:progress="30"
                    android:progressTint="?colorOnPrimary"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="wrap_content"
            app:cardCornerRadius="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_gravity="center_horizontal"
            app:cardElevation="0dp"
            app:cardBackgroundColor="#03456C"
            android:layout_height="@dimen/_40sdp">

            <com.basic.common.widget.LsTextView
                android:gravity="center"
                android:paddingStart="@dimen/_25sdp"
                android:paddingEnd="@dimen/_25sdp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Start"
                android:textSize="@dimen/_12ssp"
                android:textAllCaps="true"
                android:textColor="?colorOnPrimary"/>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>