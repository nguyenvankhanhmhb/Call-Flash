<?xml version="1.0" encoding="utf-8"?>
<resources>

    <attr name="title" format="string" />
    <attr name="summary" format="string" />
    <attr name="widget" format="reference" />
    <attr name="icon" format="reference" />
    <attr name="lottieRes" format="reference" />

    <attr name="textColor" format="enum">
        <enum name="theme" value="0" />
        <enum name="primaryOnTheme" value="1" />
        <enum name="secondaryOnTheme" value="2" />
        <enum name="tertiaryOnTheme" value="3" />
    </attr>

    <attr name="textSize" format="enum">
        <enum name="primary" value="0" />
        <enum name="secondary" value="1" />
        <enum name="tertiary" value="2" />
        <enum name="toolbar" value="3" />
        <enum name="dialog" value="4" />
        <enum name="emoji" value="5" />
    </attr>

    <attr name="textFont" format="enum">
        <enum name="regular" value="0" />
        <enum name="medium" value="1" />
        <enum name="semi" value="2" />
        <enum name="bold" value="3" />
    </attr>

    <declare-styleable name="LsTextView">
        <attr name="textColor" />
        <attr name="textSize" />
        <attr name="textFont" />
    </declare-styleable>

    <declare-styleable name="LsEditText">
        <attr name="textColor" />
        <attr name="textSize" />
        <attr name="textFont" />
    </declare-styleable>

    <declare-styleable name="BouncyRecyclerView">
        <attr name="recyclerview_overscroll_animation_size" format="float" />
        <attr name="recyclerview_fling_animation_size" format="float" />
        <attr name="allow_drag_reorder" format="boolean" />
        <attr name="allow_item_swipe" format="boolean" />

        <attr name="recyclerview_damping_ratio" format="integer">
            <enum name="DAMPING_RATIO_NO_BOUNCY" value="0" />
            <enum name="DAMPING_RATIO_LOW_BOUNCY" value="1" />
            <enum name="DAMPING_RATIO_MEDIUM_BOUNCY" value="2" />
            <enum name="DAMPING_RATIO_HIGH_BOUNCY" value="3" />
        </attr>
        <attr name="recyclerview_stiffness" format="integer">
            <enum name="STIFFNESS_VERY_LOW" value="0" />
            <enum name="STIFFNESS_LOW" value="1" />
            <enum name="STIFFNESS_MEDIUM" value="2" />
            <enum name="STIFFNESS_HIGH" value="3" />
        </attr>
    </declare-styleable>

    <declare-styleable name="BouncyNestedScrollView">
        <attr name="overscroll_animation_size" format="float"/>
        <attr name="fling_animation_size" format="float"/>

        <attr name="bouncy_scrollview_damping_ratio" format="integer">
            <enum name="DAMPING_RATIO_NO_BOUNCY" value="0" />
            <enum name="DAMPING_RATIO_LOW_BOUNCY" value="1" />
            <enum name="DAMPING_RATIO_MEDIUM_BOUNCY" value="2" />
            <enum name="DAMPING_RATIO_HIGH_BOUNCY" value="3" />
        </attr>
        <attr name="bouncy_scrollview_stiffness" format="integer">
            <enum name="STIFFNESS_VERY_LOW" value="0" />
            <enum name="STIFFNESS_LOW" value="1" />
            <enum name="STIFFNESS_MEDIUM" value="2" />
            <enum name="STIFFNESS_HIGH" value="3" />
        </attr>
    </declare-styleable>

    <declare-styleable name="LsRippleView">
        <attr name="rippleColor" format="color" />
        <attr name="rippleRadius" format="float" />
        <attr name="rippleShadow" format="boolean" />
    </declare-styleable>

    <declare-styleable name="PorterImageView">
        <attr name="frameSrc" format="color" />
    </declare-styleable>

</resources>